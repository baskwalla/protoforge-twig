{% set page_title = 'Design Pages' %}
<html>
<head>
<title>{{ page_title }}</title>
<style>
    a { text-decoration: none; font-weight: bold; }
    a:hover { text-decoration: underline; }
</style>
</head>
<body>
<h1>{{ page_title }}</h1>
{% if pages is defined and pages != '' %}
<ul>
    {% for page in pages %}
    <li><a href="/{{ page }}">{{ page|trim('/')|trim|capitalize|replace('_', ' ') }}</a></li>
    {% endfor %}
<ul>
{% endif %}
</body>
</html>
